@model IEnumerable<AspNetApiControllers.Controllers.Person>

@{
    Layout = "_Layout";
}
<div class="row content">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <th>@person.Id</th>
                    <td>@person.Name</td>
                    <td>@person.Surname</td>
                </tr>
            }
        </tbody>
    </table>
</div>

